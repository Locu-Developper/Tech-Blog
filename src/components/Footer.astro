function SinceYear(){
    let beginYear = 2024;
    let nowYear = new Date().getFullYear();
    let rangeYear = beginYear.toString();

    if(beginYear != nowYear){
        rangeYear += " - " + nowYear;
    }

    return rangeYear;
}
